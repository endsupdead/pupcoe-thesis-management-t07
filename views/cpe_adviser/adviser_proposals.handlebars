<head>
  <title>CpERMS | Proposals</title>
  <!-- LOCAL -->
  <link rel="stylesheet" type="text/css" href="../css/style.css">
</head>

{{> header_faculty }}

<!--faculty advisory-->
<div class="d-flex justify-content-center small">
  <div>
    <div class="navbar navbar-static">
      <div class="navbar-collapse collapse">
        <!--inside nav-->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#for_review" role="tab" aria-selected="true">For Review</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#reviewed" role="tab" aria-selected="false">Reviewed</a>
          </li>
        </ul><!--inside nav-->
      </div>
    </div>
    <br>
    <div class="tab-content well">
      <!--for_review-->
      <div id="for_review" class="tab-pane fade in active">
        <div class="container">
          <div class="row justify-content-center align-items-center">
            <div class="col-md-12 col-sm-12">
              <h4>For Review</h4>
              <hr class="botm-line">
              <form method="post" action="/students/settings">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                     <tr class="info center">
                      <th>Number</th>
                      <th>Members</th>
                      <th>Title</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {{#each proposal}}
                    <tr class="center">
                      <td>1</td>
                      <td>4</td>
                      <td class="title">{{this.thesis_title}}</td>
                      <td class="thesis_id" hidden>{{this.id}}</td>
                      <td class="abstract" hidden>{{this.abstract}}</td>
                      <td style="width: 15%">
                        <button type="button" class="revieww btn btn-success btn-sm" data-toggle="modal" data-target="#review"><i class="fa fa-eye w"></i> Review</button>
                      </td>
                      </tr>
                            {{/each}}
                  </tbody>
                </table>
              </form>
            </div>
          </div>
        </div>
      </div><!--for_review-->
      <!--reviewed-->
      <div id="reviewed" class="tab-pane fade">
        <div class="container">
          <div class="row justify-content-center align-items-center">
            <div class="col-md-12 col-sm-12">
              <h4>Reviewed</h4>
              <hr class="botm-line">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                  <tr class="info center">
                    <th>Number</th>
                    <th>Members</th>
                    <th>Title</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <tr class="center">
                    <td>1</td>
                    <td>4</td>
                    <td>Access Control to Home Devices using Mobile Technology</td>
                    <td>Approved with Revisions</td>
                    </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div><!--reviewed-->
    </div><!--tab content-->
  </div><!--well-->
</div><!--row-->
<!--faculty advisory-->

<!--MODAL-FORM review-->
<div class="modal fade small" id="review" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 id= "title2" class="modal-title"><strong> Title</strong></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <br>
        <!--abtract-->
        <h4 class="modal-title">Abstract</h4><br>
        <p id= "abstract2" class="justify" style="margin: 0 2%"></p>
        <br><!--abtract-->

        <!--comments and status-->
        <form method="post" action="/students/settings">
          <input type = "number" name="thesis_id" id= "thesis_id2" value = "" hidden>
          <div class="form-group">
            <div class="form-group">
              <textarea type="text" style="height: 80px" name="comments" placeholder="Your comments and suggestions here" class="form-control"></textarea>
            </div>
            <div class="form-group">
             <select style="height: 2.5em" class="form-control gray" name="class" class="form-control" id="user_class" required>
                <option hidden>Status</option>
                <option value ="2">Disapproved</option>
                <option value ="4">Approved with Revisions</option>
             </select>
            </div>
            <div class="pull-right footer">
              <button type="submit" class="btn btn-success btn-sm" data-dismiss="modal" id="loading" data-loading-text="<i class='fa fa-spinner fa-spin'></i> Please wait..."> Done</button>
              <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            </div>
          </div>
        </form><!--comments and status-->

      </div>
    </div>
  </div>
</div>
<script>
$('.revieww').click(function() {
   var abstract =  $(this).closest('td').prev('.abstract').text();
   $('#abstract2').html(abstract);
   var title =  $(this).closest('tr').find('.title').text();
   $('#title2').html(title);
   var id =  $(this).closest('tr').find('.thesis_id').text();
   $('#thesis_id2').val(id);
});
</script>
{{> footer }}
